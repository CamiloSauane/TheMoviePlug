    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Filmes</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lancamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classificacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classificacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Realizador)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Realizador)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Elenco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Elenco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sinopse)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sinopse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Visibilidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Visibilidade)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div>
    @{ if (Model.ListaDeLinks.Count != 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            URL (Uniform Resource Locator)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListaDeLinks)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.URL)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h6>Este filme ainda não tem links.</h6>
        }
    }
</div>
