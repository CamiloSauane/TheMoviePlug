@model TheMoviePlug.Models.Links

@{
    ViewData["Title"] = "Delete";
}


<style>

    body {
        background-color: rgb(0, 0, 0, 0.80);
    }

    dt {
        color: #ffb727;
    }

    dd {
        color: azure;
    }

    h3 {
        color: azure;
    }

    hr {
        background-color: white;
    }

</style>


<body>
    @{ if (User.IsInRole("Gestor"))
        {
            <h3>Tem a certeza que pretende eliminar este Link?</h3>
            <hr />
            <br />

            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.URL)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.URL)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Utilizador)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Utilizador.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Filme)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Filme.Categoria)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Visivel)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Visivel)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Apagar" class="btn btn-danger" /> |
                    <a class="btn btn-outline-secondary" asp-action="Index">Voltar à 'Lista de Links'</a>
                </form>
            </div>
        }
        else
        {
            <div style="text-align:center">
                <h2 style="color:red">Não é possível eliminar um Link pois é preciso autenticar-se como Gestor!</h2>
                <hr />
                <h4>Para aceder a este recurso precisa de registrar-se como Gestor, ou, se já tiver uma conta de Gestor, efetue o login.</h4>
            </div>
        }
    }

</body>