@model TheMoviePlug.Models.Links

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: rgb(0, 0, 0, 0.80);
    }

    label,h1 {
        color: #ffb727;
    }
</style>

<body>

    <h1>Edit</h1>

 <br/>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="URL" class="control-label"></label>
                    <input asp-for="URL" class="form-control" />
                    <span asp-validation-for="URL" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Visivel" /> @Html.DisplayNameFor(model => model.Visivel)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="UtilizadorFK" class="control-label"></label>
                    <select asp-for="UtilizadorFK" class="form-control" asp-items="ViewBag.UtilizadorFK"></select>
                    <span asp-validation-for="UtilizadorFK" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FilmeFK" class="control-label"></label>
                    <select asp-for="FilmeFK" class="form-control" asp-items="ViewBag.FilmeFK"></select>
                    <span asp-validation-for="FilmeFK" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="btn btn-outline-secondary" style="padding-bottom:5px" asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>