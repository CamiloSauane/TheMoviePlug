@model TheMoviePlug.Models.Links

@{
    ViewData["Title"] = "Details";
}


<style>
    body {
        background-color: rgb(0, 0, 0, 0.80);
    }

    dt, h1 {
        color: #ffb727;
    }

    dd {
        color: azure;
    }

    hr {
        background-color: white;
    }

</style>


<body>

    @{ if (User.IsInRole("Gestor"))
        {
            <h1>Detalhes do Link</h1>
            <hr />
            <br />

            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.URL)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.URL)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Utilizador)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Utilizador.Email)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Filme)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Filme.Titulo)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Visivel)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Visivel)
                    </dd>
                </dl>
            </div>
            <div>
                <a class="btn btn-outline-secondary" asp-action="Index">Voltar à 'Lista de Links'</a>

                @if (Model.Visivel)
                {
                    <form asp-action="MudaVisivel" style="margin-top: 5px">
                        <input type="hidden" name="filmeId" value="@Model.Id" />
                        <input type="hidden" name="linkId" value="@Html.DisplayFor(modelItem => Model.Id)" />
                        <input type="submit" class="btn btn-outline-danger" value="Esconder" style="width: 110px" />
                    </form>
                }
                else
                {
                    <form asp-action="MudaVisivel" style="margin-top: 5px">
                        <input type="hidden" name="filmeId" value="@Model.Id" />
                        <input type="hidden" name="linkId" value="@Html.DisplayFor(modelItem => Model.Id)" />
                        <input type="submit" class="btn btn-outline-success" value="Mostrar" style="width: 110px" />
                    </form>
                }
            </div>

        }
        else
        {
            <div style="text-align:center">
                <h2 style="color:red">Não é possível aceder aos detalhes de um Link pois é preciso autenticar-se como Gestor!</h2>
                <hr />
                <h4>Para aceder a este recurso precisa de registrar-se como Gestor, ou, se já tiver uma conta de Gestor, efetue o login.</h4>
            </div>
        }
    }

</body>